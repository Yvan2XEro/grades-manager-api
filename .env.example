# Database Configuration
DATABASE_URL=postgres://grades:grades@postgres:5432/grades
POSTGRES_USER=grades
POSTGRES_PASSWORD=grades
POSTGRES_DB=grades

# Better Auth Configuration
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=change-me-to-a-secure-secret-min-32-characters
BETTER_AUTH_URL=http://localhost:3000

# Server Configuration
NODE_ENV=production
PORT=3000
SERVER_PUBLIC_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGINS=http://localhost:4173

# Storage Configuration
STORAGE_DRIVER=local
STORAGE_LOCAL_ROOT=/usr/src/app/apps/server/storage/uploads
STORAGE_LOCAL_PUBLIC_PATH=/uploads

# Frontend Configuration (Build-time variables)
VITE_SERVER_URL=http://localhost:3000
VITE_DEFAULT_ORGANIZATION_SLUG=sgn-institution

# Database Seeding (Optional)
RUN_SEED=false
# SEED_FOUNDATION=/seed/00-foundation.yaml
# SEED_ACADEMICS=/seed/10-academics.yaml
# SEED_USERS=/seed/20-users.yaml
